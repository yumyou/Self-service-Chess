/* pages/orderList/orderList.wxss */
page{
  background: #f5f5f5;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}
.container{
  overflow: auto;
}
.navigtor{
  position: fixed;
  z-index: 1;
  background: #fff;
  width: 100%;
  font-weight: 500;
}

.navigtor .title{
  text-align: center;
  font-size: 38rpx;
  font-weight: 700;
}

.navigtor .left{
  position: absolute;
  left: 30rpx;
  font-weight: 500;
}

.navigtor .iconfont{
  font-size: 40rpx;
  font-weight: 500;
}

.tabs{
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 90rpx;
  font-weight: 500;
  background-color:#f5f5f5 ;
}

.tab-container{
  display: flex;
  height: 96rpx;
  align-items: center;
  padding: 0 30rpx;
  font-weight: 500;
}

.tab-item{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  position: relative;
  height: 96rpx;
  line-height: 96rpx;
}

.tab-item.active{
  color: #07c160;
  font-weight: 700;
}

.tab-item.active::after{
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.lists{
  padding: 20rpx;
  font-weight: 500;
}

.lists .item{
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.order-header{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.orderNo{
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.order-status{
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: right;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.status-text{
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.status-text.blue{
  color: #1890ff;
}

.status-text.yellow{
  color: #faad14;
}

.status-text.finish{
  color: #1890ff;
}

.status-text.gray{
  color: #999;
}

.order-detail-link{
  font-size: 26rpx;
  font-weight: 600;
}

.store-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 500;
}

.store-name{
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.room-info{
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.timeBox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-weight: 500;
}

.time{
  text-align: center;
  font-weight: 500;
}

.time .hour{
  font-size: 38rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.time .date{
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

.total{
  background: #07c160;
  color: #fff;
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  position: relative;
}

.total::before,
.total::after{
  content: '';
  position: absolute;
  top: 50%;
  width: 50rpx;
  height: 2rpx;
  background: #07c160;
}

.total::before{
  right: 100%;
  margin-right: 15rpx;
}

.total::after{
  left: 100%;
  margin-left: 15rpx;
}

.price-info{
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
  align-items: center;
  font-weight: 500;
}

.total-price{
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.actual-price{
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

/* 未登录样式 */
.containerlogin{
  flex: 1;
  padding: 0 60rpx;
  font-weight: 500;
  background: #f5f5f5;
}

.photo{
  padding: 60rpx 0;
  text-align: center;
  font-weight: 500;
}

.photo .img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 0 auto;
  overflow: hidden;
  font-weight: 500;
}

.photo .img image{
  width: 100%;
  height: 100%;
  font-weight: 500;
}

.photo .name{
  margin-top: 20rpx;
  font-weight: 600;
}

.loginBtn{
  margin-top: 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  height: 90rpx;
  line-height: 90rpx;
}

.nodata{
  text-align: center;
  color: #999;
  font-size: 28rpx;
  font-weight: 500;
  padding: 100rpx 0;
}

/* 弹窗样式保持不变 */
.dialog{
  padding: 30rpx;
  font-weight: 500;
}

.dialog .item{
  display: flex;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 10rpx 0;
  font-weight: 500;
}

.dialog .item label{
  color: #666;
  flex-shrink: 0;
  font-weight: 500;
}

.dialog .item text{
  font-weight: 700;
  font-size: 26rpx;
}

.dialog .item .pays{
  display: flex;
  font-weight: 500;
}

.dialog .item .pay .info{
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.dialog .item .pay:first-child{
  margin-right: 20rpx;
  font-weight: 500;
}

.dialog .item .pay radio{
  zoom: .8;
  font-weight: 500;
}

.dialog .item .note{
  font-size: 24rpx;
  font-weight: 500;
}