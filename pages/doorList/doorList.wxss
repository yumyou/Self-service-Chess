/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}

/* 头部搜索区域样式 */
.search-header {
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 100;
}

.search-container {
  width: 100%;
  background: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.city-selector {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  min-width: 160rpx;
  height: 100%;
  border-right: 1rpx solid #e5e5e5;
  background: #fafafa;
}

.city-text {
  font-size: 28rpx;
  color: #666666;
  margin-right: 8rpx;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chevron-down {
  width: 40rpx;
  height: 40rpx;
  margin-left: 4rpx;
  color: #999;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-divider {
  width: 1rpx;
  height: 40rpx;
  background: #e5e5e5;
  margin: 0 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  color: #999;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
  border: none;
  outline: none;
  height: 100%;
}

.search-input::placeholder {
  color: #cccccc;
}


.banner{
  height: 400rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  margin-top: 0rpx;
  text-align: center;
  background: #fff;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 100%;
}
.list .item{
  border-radius: 20rpx;
  margin: 0rpx 20rpx;
  background: rgb(255, 255, 255);
  height: 405rpx;
  margin-bottom: 20rpx;
}
.list .item .img{
  width: 100%;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
  /* border-radius: 20rpx; */
  height: 280rpx;
  margin-bottom: 10rpx;
  overflow:hidden;
}
.list .item .info{
  /* width: 100%; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* flex-wrap: wrap; */
  margin-left: 30rpx;
}
.list .item .address{
  width: 90%;
  font-size: 20rpx;
  color: rgb(85, 84, 84);
  margin-left: 30rpx;
}
.list .item .info .name{
  display: inline-block;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 36rpx;
  text-align: left;
  width: 400rpx;
  line-height: 40rpx;
  color: rgba(51, 50, 50, 0.945);
}

.list .item .info .btn{
  font-size: 40rpx;
  text-align: left;
  margin-left: 25rpx;
  /* margin-right: 25rpx; */
  line-height: 40rpx;
  color: rgba(36, 62, 87, 0.795);
}



.quickBtns{
  position: fixed;
  right: 10rpx;
  bottom: 160rpx;
  z-index: 1;
}
.quickBtns .btn{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .2);
  margin-top: 30rpx;
  text-align: center;
  font-size: 24rpx;
  position: relative;
}
.quickBtns .btn .item{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.quickBtns .btn .text{
  margin-top: 8rpx;
  width: 100%;
  text-align: center;
  line-height: 1;
}
.quickBtns .btn .iconfont{
  font-size: 40rpx;
  width: 100%;
}
.quickBtns .help{
  background: #fff;
}
.quickBtnsLf{
  right: 0;
  left: 30rpx;
}
.quickBtnsLf .location{
  background: #fff;
}

.bt{
  height: 100rpx;
  margin-bottom: 50rpx;
}

.noStoreInfo {
  font-size: 32rpx;
  text-align: center;
  margin: 100rpx;
}
.noStoreBtn{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: var(--main-color);
}