/* pages/favorite/favorite.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  padding: 10rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 60rpx;
}

/* 门店列表样式 */
.store-list {
  padding: 20rpx;
}

.store-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.store-image {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.store-image image {
  width: 100%;
  height: 100%;
}

.store-info {
  padding: 24rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.store-hours {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.store-address {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.book-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.book-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.book-btn van-icon {
  margin-right: 8rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-store-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  text-decoration: none;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

/* 响应式布局 */
@media (min-width: 750rpx) {
  .store-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .store-item:last-child:nth-child(odd) {
    grid-column: 1 / -1;
  }
}
