/* —— 对齐 orderSubmit 的时间轴风格 —— */
.timeline {
  margin-bottom: 30rpx;
}

.timeline-slots {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  position: relative;
  padding: 0 10rpx;
  overflow-x: auto;
  gap: 8rpx;
}

.timeline-slots::before {
  content: '';
  position: absolute;
  top: 30rpx;
  left: 20rpx;
  right: 20rpx;
  height: 3rpx;
  background: #e8e8e8;
  z-index: 1;
}

.time-slot {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  min-width: 5rpx;
  width: 5rpx;
  flex-shrink: 0;
  transition: all 0.3s;
}

.time-slot:active {
  transform: scale(0.95);
}

.slot-marker {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #e8e8e8;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s;
}

.slot-marker.disabled {
  background: #e8e8e8;
  border-color: #e8e8e8;
}

.slot-marker.low-price {
  background: #07c160;
  border-color: #07c160;
}

.slot-marker.high-price {
  background: #ff9500;
  border-color: #ff9500;
}

.slot-time {
  font-size: 20rpx;
  color: #aaa;
  line-height: 1;
  white-space: nowrap;
  transition: all 0.3s;
}

.timeline-legend {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #666;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-dot.unavailable {
  background: #e8e8e8;
}

.legend-dot.available {
  background: #fff;
  border: 2rpx solid #e8e8e8;
}

.legend-dot.low-price {
  background: #07c160;
}

.legend-dot.high-price {
  background: #ff9500;
}